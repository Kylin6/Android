<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yl.game.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="电脑："
        android:textSize="25dp"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintVertical_weight="1"
        android:layout_marginStart="41dp"
        android:layout_marginTop="26dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Computer_player"
        android:layout_marginLeft="41dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="玩家："
        android:textSize="25dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintVertical_weight="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="41dp"
        android:layout_marginTop="18dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/player"
        android:layout_marginLeft="41dp" />

    <ImageView
        android:id="@+id/Computer_player"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/p1"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintVertical_weight="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/player"
        app:layout_constraintRight_toRightOf="@+id/player"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="31dp"
        app:layout_constraintLeft_toLeftOf="@+id/player" />

    <ImageView
        android:id="@+id/player"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/p1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintBottom_toTopOf="@+id/Cloth"
        app:layout_constraintRight_toRightOf="@+id/Cloth"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="142dp"
        app:layout_constraintLeft_toLeftOf="@+id/Cloth" />

    <TextView
        android:id="@+id/Computer_player_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintBottom_toBottomOf="@+id/player_num"
        app:layout_constraintRight_toRightOf="@+id/player_num"
        android:layout_marginTop="120dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="122dp"
        app:layout_constraintLeft_toLeftOf="@+id/player_num"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/player_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintVertical_weight="1"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="75dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="37dp"
        app:layout_constraintTop_toTopOf="@+id/player"
        android:layout_marginRight="75dp" />

    <ImageButton
        android:id="@+id/Scissors"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/p1"
        android:onClick="Record1"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintRight_toLeftOf="@+id/Cloth"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="31dp"
        app:layout_constraintBottom_toBottomOf="@+id/Cloth"
        android:layout_marginEnd="25dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Cloth"
        android:layout_marginLeft="31dp"
        android:layout_marginRight="25dp" />

    <ImageButton
        android:id="@+id/Cloth"
        android:layout_width="100dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/p2"
        android:onClick="Record2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="56dp" />

    <ImageButton
        android:id="@+id/Rock"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/p3"
        android:onClick="Record3"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintVertical_weight="1"
        android:layout_marginStart="27dp"
        app:layout_constraintBottom_toBottomOf="@+id/Cloth"
        android:layout_marginEnd="28dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/Cloth"
        app:layout_constraintLeft_toRightOf="@+id/Cloth"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="28dp" />

    <Button
        android:id="@+id/play"
        android:layout_width="108dp"
        android:layout_height="48dp"
        android:text="开始"
        android:onClick="play"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintVertical_weight="1"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="58dp"
        app:layout_constraintBottom_toBottomOf="@+id/Scissors"
        android:layout_marginEnd="59dp"
        app:layout_constraintRight_toRightOf="@+id/Cloth"
        android:layout_marginTop="149dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="145dp"
        app:layout_constraintLeft_toLeftOf="@+id/Scissors"
        app:layout_constraintTop_toTopOf="@+id/player"
        android:layout_marginLeft="58dp"
        android:layout_marginRight="59dp" />

    <Button
        android:id="@+id/reset"
        android:layout_width="101dp"
        android:layout_height="48dp"
        android:text="重置"
        android:onClick="reset"
        android:layout_marginStart="27dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintBaseline_toBaselineOf="@+id/play"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/play"
        android:layout_marginLeft="27dp" />

</android.support.constraint.ConstraintLayout>
